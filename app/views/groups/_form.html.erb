<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :input_html => { :class => "span4" } %> 
    <%= f.input :description, :input_html => { :class => "span4", :rows => 3 } %>  
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
